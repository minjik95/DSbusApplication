<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/line1"
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:layout_marginStart="32dp"
        android:background="@color/transparencyColorDS"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/stNm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/line1"
        android:layout_marginStart="40dp"
        android:text="testzczczc"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/arsId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/line1"
        app:layout_constraintTop_toBottomOf="@id/stNm"
        android:layout_marginStart="40dp"
        android:text="tesdfsfsfsst"
        android:textSize="20dp"/>

    <!--선 한 줄 넣기-->


    <TextView
        android:id="@+id/plainNo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/busImage1"/>


    <TextView
        android:id="@+id/plainNo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/busImage2"/>

    <ImageView
        android:id="@+id/busImage1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_directions_bus_24dp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/line1"
        app:layout_constraintEnd_toEndOf="@id/line1"/>


    <ImageView
        android:id="@+id/busImage2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_directions_bus_24dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/arsId"
        app:layout_constraintStart_toStartOf="@id/line1"
        app:layout_constraintEnd_toEndOf="@id/line1"/>


    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="#A6A6A6"-->
        <!--app:layout_constraintBottom_toBottomOf="@id/arsId"/>-->

</android.support.constraint.ConstraintLayout>